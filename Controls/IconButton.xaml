<UserControl x:Class="OneCan.Controls.IconButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OneCan.Controls"
             mc:Ignorable="d" 
             x:Name="URoot"
             d:DesignHeight="50" d:DesignWidth="200">
    <Grid Background="Transparent">
        <Button Margin="0,0,2,0" x:Name="DasButton" BorderBrush="Transparent" Background="Transparent">
            <Border Width="{Binding ElementName=URoot,Path=ActualWidth}" Background="{DynamicResource GridBackground}" BorderBrush="Gray" BorderThickness="0.8,0.8,0.8,0.8" CornerRadius="10,10,10,10">
                <Grid Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="{Binding ElementName=URoot,Path=Height}"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Image x:Name="ImageBox" Source="/Resources/Block.png"/>
                    <TextBlock Grid.Column="1" VerticalAlignment="Center" Foreground="{DynamicResource Foreground}" FontSize="16" x:Name="TextBox" Text="按钮"/>
                </Grid>
            </Border>
        </Button>
    </Grid>
</UserControl>
