<UserControl x:Class="OneCan.Controls.SidebarItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OneCan.Controls"
             mc:Ignorable="d" 
             Height="80" Width="80">
    <Grid>
        <Border CornerRadius="4" BorderBrush="Gray" BorderThickness="1">
        <Button Background="{DynamicResource GridBackground}" BorderBrush="Transparent" Click="Button_Click">
            <Grid Height="80" Width="80">
                <Image Margin="0,0,0,20" x:Name="DasIcon" Width="60" Height="60" VerticalAlignment="Center"/>
                <TextBlock Foreground="{DynamicResource Foreground}" HorizontalAlignment="Center" x:Name="DasText" FontSize="12" VerticalAlignment="Bottom" Margin="0,0,0,5"/>
            </Grid>
        </Button>
        </Border>
    </Grid>
</UserControl>
