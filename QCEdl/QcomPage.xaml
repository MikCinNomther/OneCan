<Page x:Class="OneCan.QCEdl.QcomPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:OneCan.QCEdl"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="QcomPage">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label Content="Qcom 高通专区" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,0,0,10" FontWeight="Bold" FontSize="16"/>

        <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,0,0,10">
            <Button Content="Button" Margin="0,0,5,0" MinWidth="40"/>
            <Button Content="Button" Margin="0,0,5,0" MinWidth="40"/>
            <Button Content="Button" Margin="0,0,5,0" MinWidth="40"/>
            <Button Content="Button" MinWidth="40"/>
        </StackPanel>

        <DataGrid Grid.Row="2" Grid.Column="0" Margin="0,0,10,10" d:ItemsSource="{d:SampleData ItemCount=5}" 
                  HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>

        <TextBox Grid.Row="3" Grid.Column="0" Margin="0,0,10,0" TextWrapping="Wrap" Text=""
                 HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
        <Label Content="日志" Grid.Row="2" Grid.Column="0" VerticalAlignment="Bottom" Margin="0,0,10,0"/>

        <Label Content="设备信息" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,0,0,5"/>
        <TextBox Grid.Row="2" Grid.Column="1" TextWrapping="Wrap" Text="" TextChanged="TextBox_TextChanged"
                 HorizontalAlignment="Stretch" VerticalAlignment="Top" Height="100" Margin="0,0,0,10"/>

        <StackPanel Grid.Row="2" Grid.Column="1" Grid.RowSpan="2" Orientation="Vertical" 
                   HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="0,110,0,0">
            <Button Content="Button" Margin="0,0,0,5" HorizontalAlignment="Stretch"/>
            <Button Content="Button" Margin="0,0,0,5" HorizontalAlignment="Stretch"/>
            <Button Content="Button" Margin="0,0,0,5" HorizontalAlignment="Stretch"/>
            <Button Content="Button" Margin="0,0,0,5" HorizontalAlignment="Stretch"/>
            <Button Content="Button" Margin="0,0,0,5" HorizontalAlignment="Stretch"/>
            <Button Content="Button" HorizontalAlignment="Stretch"/>
        </StackPanel>
    </Grid>
</Page>
