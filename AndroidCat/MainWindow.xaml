<Page x:Class="AndroidCat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AndroidCat"
        mc:Ignorable="d"
        xmlns:nc="clr-namespace:AndroidCat.Controls"
        Loaded="Window_Loaded"
        MinWidth="750"
        MinHeight="400"
        Title="安喵">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Visibility="Hidden" Background="#2579FF" Grid.Row="0" MouseLeftButtonDown="Grid_MouseLeftButtonDown">
            <Button Content="💡" Background="Transparent" HorizontalAlignment="Right" Width="32" BorderBrush="Transparent" Click="Button_Click" Margin="0,0,160,0" Foreground="{DynamicResource BackgroundColor}"/>
            <TextBlock Text="安喵" VerticalAlignment="Center" HorizontalAlignment="Left" Foreground="White" FontSize="18" FontWeight="Bold" Margin="15,0,0,0"/>
            <Button Click="Minz_Click"  x:Name="Minz" HorizontalAlignment="Right" Background="Transparent" BorderThickness="0" Margin="0,0,80,0" Width="40">
                <TextBlock Text="-" FontSize="35" Margin="0,-10,0,0" Foreground="White"/>
            </Button>
            <Button Click="Maxz_Click" x:Name="Maxz" HorizontalAlignment="Right" Background="Transparent" BorderThickness="0" Margin="0,0,40,0" Width="40">
                <TextBlock Text="□" FontSize="28" Margin="0,-8,0,0" Foreground="White"/>
            </Button>
            <Button Click="Cloiz_Click" x:Name="Cloiz" HorizontalAlignment="Right" Background="Transparent" BorderThickness="0" Margin="0,0,00,0" Width="40">
                <TextBlock Text="×" FontSize="25" Margin="0,-2,0,0" Foreground="White"/>
            </Button>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="150"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="180"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Image Margin="20" Source="/AndroidCat/emo_im_laughing.png"/>
                <Button Background="Transparent" BorderBrush="Transparent" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="10">
                    <TextBlock Text="1.0.0" Foreground="Blue" MouseLeftButtonDown="TextBlock_MouseLeftButtonDown" TextDecorations="Underline"/>
                </Button>
                <GroupBox Header="" Margin="0,5,5,5" Grid.Column="1">
                    <Grid>
                        <TextBlock x:Name="Changshang" Text="設備廠商：" Margin="0,5,0,0"/>
                        <TextBlock x:Name="Xinghao" Text="設備型號：" Margin="0,20,0,0"/>
                        <TextBlock x:Name="Daihao" Text="設備代號：" Margin="0,35,0,0"/>
                        <TextBlock x:Name="Cunchu" Text="存儲分區：" Margin="0,50,0,0"/>
                        <TextBlock x:Name="Yuncun" Text="運行內存：" Margin="0,65,0,0"/>
                        <TextBlock x:Name="Fenbianlv" Text="分辨率：" Margin="0,80,0,0"/>
                        <TextBlock x:Name="Anzhuobanben" Text="Android：" Margin="150,5,0,0"/>
                        <TextBlock x:Name="Root" Text="Root：" Margin="150,20,0,0"/>
                        <TextBlock x:Name="DPI" Text="DPI：" Margin="150,35,0,0"/>
                        <Button x:Name="FlashDeviceInfo" Click="FlashDeviceInfo_Click" Width="150" Height="50" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="150,0,0,15">
                            <TextBlock Text="刷新" FontSize="25"/>
                        </Button>
                        <Grid HorizontalAlignment="Right" Width="200">
                            <Button Click="Button_Click_1" Content="重启到System" Width="100" Height="60" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                            <Button Click="Button_Click_2" Content="重启到Recovery" Width="100" Height="60" HorizontalAlignment="Left" VerticalAlignment="Bottom"/>
                            <Button Click="Button_Click_3" Content="重启到Fastboot" Width="100" Height="60" HorizontalAlignment="Right" VerticalAlignment="Top"/>
                            <Button Click="Button_Click_4" Content="重启到9008" Width="100" Height="60" HorizontalAlignment="Right" VerticalAlignment="Bottom"/>
                        </Grid>
                    </Grid>
                </GroupBox>
            </Grid>
            <Grid Grid.Row="1">
                <GroupBox Header="" Margin="5">
                    <Grid>
                        <Frame x:Name="BarItems" NavigationUIVisibility="Hidden" Height="30" VerticalAlignment="Top">
                            <Frame.Content>
                                <nc:Sidebar x:Name="Sidebar"/>
                            </Frame.Content>
                        </Frame>
                        <Frame NavigationUIVisibility="Hidden" x:Name="MainContent" Margin="0,35,0,0">
                            <Frame.Content>
                                <Page>
                                    <Grid>
                                        <TextBlock Text="↑請選擇以上欄目以使用對應功能~" HorizontalAlignment="Center" Margin="10" FontSize="15" FontFamily="FangSong"/>
                                        <TextBlock Text="歡迎使用" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="50"/>
                                    </Grid>
                                </Page>
                            </Frame.Content>
                        </Frame>
                    </Grid>
                </GroupBox>
            </Grid>
        </Grid>
    </Grid>
</Page>
