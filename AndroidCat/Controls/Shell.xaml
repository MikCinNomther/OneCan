<UserControl x:Class="AndroidCat.Controls.Shell"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AndroidCat.Controls"
             mc:Ignorable="d" 

             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="Black">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <TextBox TextWrapping="WrapWithOverflow" Grid.Row="0" Background="Black" Foreground="White" FontFamily="Consolas" IsReadOnly="True" FontSize="{Binding Value, ElementName=Sizer}" FontWeight="Thin" x:Name="Output"/>
        <TextBlock Grid.Row="1" Foreground="White" HorizontalAlignment="Left" Background="Black" Width="20" Margin="0,2,0,0" Text=">" FontSize="25"/>
        <TextBox Margin="20,2,100,0" KeyDown="TextBox_KeyDown" Grid.Row="1" Background="Black" x:Name="Input" Foreground="White" FontSize="20" VerticalContentAlignment="Center" FontWeight="Bold"/>
        <Slider Grid.Row="1" Value="15" Minimum="0.02" Maximum="50" Width="80" HorizontalAlignment="Right" x:Name="Sizer" Margin="0,0,10,0" VerticalAlignment="Center" Background="Black"/>
    </Grid>
</UserControl>
